<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib"
                    xmlns:prop="clr-namespace:ControlsLib.AttachedProperties;assembly=ControlsLib">
    <Style x:Key="ListViewStyle" TargetType="{x:Type clib:ListView}" BasedOn="{StaticResource {x:Type clib:ListView}}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarBackground" Value="#99101828"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarThumbBackground" Value="#333E50"/>
        <Setter Property="prop:ScrollViewerHelper.HoverScrollBarThumbBackground" Value="#2f3a4a"/>
        <Setter Property="prop:ScrollViewerHelper.ClickScrollBarThumbBackground" Value="#2b3544"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarCornerRadius" Value="3"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarThumbCornerRadius" Value="3"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarThumbWidth" Value="5"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarWidth" Value="5"/>
        <Setter Property="CanSelect" Value="False"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="HoverItemBackground" Value="Transparent"/>
        <Setter Property="HoverItemBorderBrush" Value="Transparent"/>
        <Setter Property="VirtualizingPanel.ScrollUnit" Value="Pixel"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
</ResourceDictionary>