<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib"
                    xmlns:prop="clr-namespace:ControlsLib.AttachedProperties;assembly=ControlsLib">
    <Style x:Key="TextBoxStyle" TargetType="{x:Type clib:TextBox}" BasedOn="{StaticResource {x:Type clib:TextBox}}">
        <Setter Property="Background" Value="#101828"/>
        <Setter Property="BorderBrush" Value="#333E50"/>
        <Setter Property="PlaceholderForeground" Value="#4DFFFFFF"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="13"/>
        <Setter Property="CornerRadius" Value="18"/>
    </Style>
    <Style x:Key="ReadonlyTextBoxStyle" TargetType="{x:Type clib:TextBox}" BasedOn="{StaticResource {x:Type clib:TextBox}}">
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarThumbWidth" Value="7"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarWidth" Value="7"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarThumbCornerRadius" Value="4"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarCornerRadius" Value="4"/>
        <Setter Property="prop:ScrollViewerHelper.ClickScrollBarThumbBackground" Value="#1c2b4a"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarThumbBackground" Value="#1c2b4a"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarBackground" Value="#0e1524"/>
    </Style>
    
</ResourceDictionary>