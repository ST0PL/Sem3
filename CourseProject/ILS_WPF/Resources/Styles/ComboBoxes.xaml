<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib"
                    xmlns:prop="clr-namespace:ControlsLib.AttachedProperties;assembly=ControlsLib">
    <Style x:Key="ComboBoxStyle" TargetType="{x:Type clib:ComboBox}" BasedOn="{StaticResource {x:Type clib:ComboBox}}">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="#101828"/>
        <Setter Property="BorderBrush" Value="#333E50"/>
        <Setter Property="HoverBackgroundColor" Value="#0e1524"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="5,10,5,10"/>
        <Setter Property="CornerRadius" Value="18"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="PopupBackground" Value="#101828"/>
        <Setter Property="PopupCornerRadius" Value="10"/>
        <Setter Property="PopupBorderBrush" Value="#333E50"/>
        <Setter Property="PopupMargin" Value="5"/>
        <Setter Property="HoverItemBackground" Value="#131e31"/>
        <Setter Property="ItemsCornerRadius" Value="10"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarBackground" Value="#0e1524"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarThumbBackground" Value="#1c2b4a"/>
        <Setter Property="prop:ScrollViewerHelper.ClickScrollBarThumbBackground" Value="#1c2b4a"/>
        <Setter Property="prop:ScrollViewerHelper.HoverScrollBarThumbBackground" Value="#1c2b4a" />
        <Setter Property="prop:ScrollViewerHelper.ScrollBarCornerRadius" Value="4"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarThumbCornerRadius" Value="4"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarWidth" Value="7"/>
        <Setter Property="prop:ScrollViewerHelper.ScrollBarThumbWidth" Value="7"/>
    </Style>
</ResourceDictionary>