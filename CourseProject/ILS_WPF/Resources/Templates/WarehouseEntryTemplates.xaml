    <DataTemplate x:Key="SimpleAmmunitionTemplate">
        <TextBlock FontSize="17"
                   Foreground="White"
                   Opacity="0.4">
            <Run Text="•"/>
            <Run Text="{Binding Caliber, Converter={StaticResource enumConverter}}"/>
            <Run Text="{Binding MaterialType, Converter={StaticResource enumConverter}, StringFormat='({0})'}"/>
            <Run Text="-"/>
            <Run Text="{Binding Quantity, Converter={StaticResource numberShortenerConverter}}"/>
            <Run Text="{Binding MeasureUnit, Converter={StaticResource enumConverter}}"/>
        </TextBlock>
