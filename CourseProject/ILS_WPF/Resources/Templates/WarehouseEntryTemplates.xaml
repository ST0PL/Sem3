<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib"
                    xmlns:local="clr-namespace:ILS_WPF">
    <DataTemplate x:Key="AmmunitionTemplate">
        <clib:Button Background="#101828"
                     BorderBrush="#333E50"
                     HoverBackgroundColor="#0d1422"
                     CornerRadius="20"
                     Width="350"
                     Cursor="Hand"
                     HorizontalContentAlignment="Left"
                     Margin="25,20,25,0"
                     Height="105"
                     Command="{Binding DataContext.OpenEditEntryWindowCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                     CommandParameter="{Binding}">
            <StackPanel Margin="10">
                <TextBlock Text="{Binding Name}"
                           Foreground="#00D492"
                           FontSize="20"
                           FontWeight="SemiBold"
                           TextTrimming="CharacterEllipsis"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Калибр: "
                               FontSize="13"
                               Foreground="#66FFFFFF"/>
                    <TextBlock Text="{Binding Caliber, Converter={StaticResource enumConverter}}"
                               Foreground="#66FFFFFF"
                               FontSize="13"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Количество: "
                               FontSize="13"
                               Foreground="#66FFFFFF"/>
                    <TextBlock Text="{Binding Quantity}"
                               Foreground="#66FFFFFF"
                               FontSize="13"/>
                    <TextBlock Text="{Binding MeasureUnit, Converter={StaticResource enumConverter}}"
                               Foreground="#66FFFFFF"
                               FontSize="13"
                               Margin="3,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </clib:Button>
    </DataTemplate>
