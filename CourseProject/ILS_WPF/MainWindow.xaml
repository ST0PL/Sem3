<Window x:Class="ILS_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib"
        xmlns:prop="clr-namespace:ControlsLib.AttachedProperties;assembly=ControlsLib"
        xmlns:local="clr-namespace:ILS_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="680" Width="1366"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border CornerRadius="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#030713" Offset="0.24"/>
                <GradientStop Color="#1D2838" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Background="#80141d2b"
                    BorderThickness="0,0,0,1"
                    CornerRadius="10,10,0,0"
                    BorderBrush="#806b6b6b"
                    Padding="10"
                    MouseDown="Border_MouseDown">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            prop:PanelChildrenProperties.Margin="10,0,0,0">
                    <clib:Button Style="{StaticResource MinimuzeButtonStyle}"
                                 Click="MinimizeButton_Click"/>
                    <clib:Button Style="{StaticResource CloseButtonStyle}"
                                 Click="CloseButton_Click"
                                 Opacity="0.8"/>
                </StackPanel>
            </Border>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border Background="#40101828"
                        Margin="10"
                        CornerRadius="20"
                        BorderThickness="1"
                        BorderBrush="#333E50">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Margin="0,25,0,0">
                            <Image Source="/Resources/Icons/ils.png"
                                   Width="75"
                                   Opacity="0.75"
                                   RenderOptions.BitmapScalingMode="LowQuality"/>
                            <TextBlock Text="ИЛС"
                                       FontSize="20"
                                       TextAlignment="Center"
                                       Foreground="#02A372"
                                       FontWeight="DemiBold"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1"
                                    Margin="0,50,0,0"
                                    prop:PanelChildrenProperties.Margin="0,5,0,0">
                            <clib:ImageRadioButton Style="{StaticResource NavButtonStyle}"
                                                   ImageSource="{StaticResource MainPageIcon}"
                                                   CheckedImageSource="{StaticResource MainPageIcon_Checked}"
                                                   Content="Главная"/>
                            <clib:ImageRadioButton Style="{StaticResource NavButtonStyle}"
                                                   ImageSource="{StaticResource TasksIcon}"
                                                   CheckedImageSource="{StaticResource TasksIcon_Checked}"
                                                   Content="Заявки"/>
                            <clib:ImageRadioButton Style="{StaticResource NavButtonStyle}"
                                                   ImageSource="{StaticResource BoxIcon}"
                                                   CheckedImageSource="{StaticResource BoxIcon_Checked}"
                                                   Content="Склады"/>
                            <clib:ImageRadioButton Style="{StaticResource NavButtonStyle}"
                                                   ImageSource="{StaticResource StructureIcon}"
                                                   CheckedImageSource="{StaticResource StructureIcon_Checked}"
                                                   Content="Подразделения"/>
                            <clib:ImageRadioButton Style="{StaticResource NavButtonStyle}"
                                                   ImageSource="{StaticResource PeopleIcon}"
                                                   CheckedImageSource="{StaticResource PeopleIcon_Checked}"
                                                   Content="Военнослужащие"/>
                        </StackPanel>
                        <Border Grid.Row="2"
                                VerticalAlignment="Bottom"
                                BorderBrush="#333E50"
                                BorderThickness="0,1,0,0">
                            <clib:Button Cursor="Hand"
                                         Background="#1B2636"
                                         HoverBackgroundColor="#17212f"
                                         ClickBackgroundColor="#121a25"
                                         Margin="20"
                                         Padding="70,8,70,8"
                                         BorderThickness="0"
                                         CornerRadius="8">
                                <clib:Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{StaticResource LogoutIcon}"
                                               Height="15"/>
                                        <TextBlock FontSize="12"
                                                   Foreground="#FF6467"
                                                   Text="Выйти"
                                                   Margin="5,0,0,0"/>
                                    </StackPanel>
                                </clib:Button.Content>
                            </clib:Button>
                        </Border>
                    </Grid>
                </Border>
                <ContentPresenter Grid.Column="1"/>
            </Grid>
        </Grid>
    </Border>
</Window>
