<UserControl x:Class="ILS_WPF.Views.Main.MainViewCommander"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ILS_WPF.Views.Main"
             xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1110">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Margin="20,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Главная"
                       FontSize="25"
                       FontWeight="SemiBold"
                       Foreground="#00D492"/>
            <clib:Button Style="{StaticResource DarkGreenButtonStyle}"
                         Content="Обновить"
                         Grid.Column="1"
                         HorizontalAlignment="Right"
                         Padding="10"
                         Command="{Binding RefreshCommand}"/>
        </Grid>
        <Grid Grid.Row="1"
              Margin="20,25,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Visibility="{Binding CurrentUnit, Converter={StaticResource emptyVisibilityConverter}}">
                <TextBlock Text="{Binding CurrentUnit.Name}"
                           FontSize="25"
                           FontWeight="SemiBold"
                           Foreground="#00D492"/>
                <StackPanel Orientation="Horizontal"
                            Margin="0,10,0,0">
                    <TextBlock Text="Тип: "
                               FontSize="18"
                               Foreground="White"
                               Opacity="0.5"/>
                    <TextBlock Text="{Binding CurrentUnit.Type, Converter={StaticResource enumConverter}}"
                               FontSize="18"
                               Foreground="White"
                               Opacity="0.5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Коммандир: "
                               FontSize="18"
                               Foreground="White"
                               Opacity="0.5"/>
                    <TextBlock Text="{Binding CurrentUnit.Commander.FullName, Converter={StaticResource abbreviationConverter}}"
                               FontSize="18"
                               Foreground="White"
                               Opacity="0.5"/>
                </StackPanel>
            </StackPanel>
            <clib:Button Grid.Column="1"
                         Style="{StaticResource DarkGreenButtonStyle}"
                         Command="{Binding OpenSupplyRequestWindowCommand}"
                         Content="Открыть заявку на снабжение"
                         HorizontalAlignment="Right"
                         VerticalAlignment="Top"
                         Padding="10"/>
        </Grid>
        <Border Grid.Row="2"
                Background="#80111827"
                BorderBrush="#1E2939"
                BorderThickness="1"
                Margin="20,20,0,0"
                Padding="20"
                CornerRadius="20"
                VerticalAlignment="Stretch">
            <Grid>
                <StackPanel>
                    <TextBlock Text="История заявок"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#00D492"/>
                    <clib:ListView Style="{StaticResource ListViewStyle}"
                                   ItemsSource="{Binding SupplyResponses}"
                                   Margin="0,5,0,0"
                                   VirtualizingPanel.ScrollUnit="Pixel"
                                   Height="189">
                        <clib:ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#172131"
                                        BorderBrush="#1E2939"
                                        BorderThickness="1"
                                        Padding="12"
                                        CornerRadius="15"
                                        Width="960">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}"
                                                       Foreground="#00D492"
                                                       FontWeight="SemiBold"
                                                       FontSize="15"/>
                                            <TextBlock Text="{Binding SupplyResponse.Status, StringFormat='Статус: {0}', Converter={StaticResource enumConverter}}"
                                                       Foreground="White"
                                                       FontSize="15"
                                                       Opacity="0.5"/>
                                            <TextBlock Text="{Binding SupplyResponse.Request.CreationTime, StringFormat='Дата: {0:yyyy-MM-dd HH:mm}'}"
                                                       Foreground="White"
                                                       FontSize="15"
                                                       Opacity="0.5"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding SupplyResponse.RequestId, StringFormat='ID: {0}'}"
                                                   Foreground="White"
                                                   Opacity="0.8"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   FontSize="15"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </clib:ListView.ItemTemplate>
                    </clib:ListView>
                </StackPanel>
                <TextBlock Text="Нет заявок"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Opacity="0.5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasSupplyResponses}" Value="True">
                                    <DataTrigger.Setters>
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger.Setters>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>
        <Grid Grid.Row="3"
              Margin="20,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Background="#80111827"
                    BorderBrush="#1E2939"
                    BorderThickness="1"
                    CornerRadius="20"
                    Padding="20"
                    Height="200"
                    Margin="0,0,20,0">
                <Grid>
                    <StackPanel>
                        <TextBlock FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#00D492"
                                   Text="{Binding Path=Personnel.Count, StringFormat='Личный состав - {0} чел.', Converter={StaticResource numberShortenerConverter}}"/>
                        <clib:ListView Style="{StaticResource ListViewStyle}"
                                       ItemsSource="{Binding Personnel}"
                                       Height="100">
                            <clib:ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="17"
                                               Foreground="White"
                                               Opacity="0.4">
                                        <Run Text="•"/>
                                        <Run Text="{Binding Rank, Converter={StaticResource enumConverter}}"/>
                                        <Run Text="{Binding FullName, Converter={StaticResource abbreviationConverter}}"/>
                                        <Run Text="-"/>
                                        <Run Text="{Binding Speciality, Converter={StaticResource enumConverter}}"/>
                                    </TextBlock> 
                                </DataTemplate>
                            </clib:ListView.ItemTemplate>
                        </clib:ListView>
                    </StackPanel>
                    <TextBlock Text="Нет данных"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Opacity="0.5">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasPersonnel}" Value="True">
                                        <DataTrigger.Setters>
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger.Setters>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
            <Border Grid.Column="1"
                    Background="#80111827"
                    BorderBrush="#1E2939"
                    BorderThickness="1"
                    CornerRadius="20"
                    Padding="20"
                    Height="200"
                    Margin="20,0,0,0">
                <Grid>
                    <StackPanel>
                        <TextBlock FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#00D492"
                                   Text="Наполнение склада"/>
                        <TextBlock FontSize="18"
                                   Opacity="0.7"
                                   Foreground="White"
                                   Visibility="{Binding CurrentUnit.AssignedWarehouse.Name, Converter={StaticResource emptyVisibilityConverter}}"
                                   Text="{Binding CurrentUnit.AssignedWarehouse.Name}"/>
                        <clib:ListView Style="{StaticResource ListViewStyle}"
                                       ItemsSource="{Binding WarehouseItems}"
                                       ItemTemplateSelector="{StaticResource simpleWarehouseEntryTemplateSelector}"
                                       Height="100"/>
                    </StackPanel>
                    <TextBlock Text="Нет данных"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Opacity="0.5">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasWarehouseItems}" Value="True">
                                        <DataTrigger.Setters>
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger.Setters>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>                    
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
