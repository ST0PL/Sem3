<UserControl x:Class="ILS_WPF.Views.Main.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ILS_WPF.Views.Main"
             xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="631" d:DesignWidth="1110">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Margin="20,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Главная"
                       FontSize="30"
                       FontWeight="SemiBold"
                       Foreground="#00D492"/>
            <clib:Button Style="{StaticResource DarkGreenButtonStyle}"
                         Content="Обновить"
                         Grid.Column="1"
                         HorizontalAlignment="Right"
                         Padding="10"
                         Command="{Binding RefreshCommand}"/>
        </Grid>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0,100,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">
            <Border Background="#99101828"
                    BorderBrush="#1E2939"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="20"
                    HorizontalAlignment="Left"
                    Width="245"
                    Height="150">
                <Grid Margin="10"
                      VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Background="#090f19"
                            Width="75"
                            Height="75"
                            Padding="15"
                            CornerRadius="15">
                        <Image Source="{StaticResource PeopleIcon_Shrunk}"/>
                    </Border>
                    <StackPanel Grid.Column="1"
                                Margin="15,0,0,0"
                                VerticalAlignment="Bottom">
                        <TextBlock Text="Учитываемый персонал"
                                   TextWrapping="Wrap"
                                   FontSize="17"
                                   Foreground="White"
                                   Opacity="0.5"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TotalPersonnel}"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="18"/>
                            <TextBlock Margin="5,0,0,0"
                                       Text="чел."
                                       Foreground="White"
                                       Opacity="0.5"
                                       FontSize="18"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Background="#99101828"
                    BorderBrush="#1E2939"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="20"
                    HorizontalAlignment="Left"
                    Width="265"
                    Height="150"
                    Margin="30,0,0,0">
                <Grid Margin="10"
                      VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Background="#090f19"
                            Width="75"
                            Height="75"
                            Padding="15"
                            CornerRadius="15">
                        <Image Source="{StaticResource TasksIcon_Shrunk}"/>
                    </Border>
                    <StackPanel Grid.Column="1"
                                Margin="15,0,0,0"
                                VerticalAlignment="Bottom">
                        <TextBlock Text="Неразрешенные заявки"
                                   TextWrapping="Wrap"
                                   FontSize="17"
                                   Foreground="White"
                                   Opacity="0.5"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding UnresolvedRequests}"
                                       Foreground="#FF3D3D"
                                       FontWeight="SemiBold"
                                       FontSize="18"/>
                            <TextBlock Margin="5,0,0,0"
                                       Text="шт."
                                       Foreground="White"
                                       Opacity="0.5"
                                       FontSize="18"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Background="#99101828"
                    BorderBrush="#1E2939"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="20"
                    HorizontalAlignment="Left"
                    Width="280"
                    Height="150"
                    Margin="30,0,0,0">
                <Grid Margin="10"
                      VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Background="#090f19"
                            Width="75"
                            Height="75"
                            Padding="15"
                            CornerRadius="15">
                        <Image Source="{StaticResource ActivityIcon}"/>
                    </Border>
                    <StackPanel Grid.Column="1"
                                Margin="15,0,0,0"
                                VerticalAlignment="Bottom">
                        <TextBlock Text="Авто-разрешение заявок за сутки"
                                   TextWrapping="Wrap"
                                   FontSize="17"
                                   Foreground="White"
                                   Opacity="0.5"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding ResolvedPercent}"
                                       Foreground="#00D492"
                                       FontWeight="SemiBold"
                                       FontSize="18"/>
                            <TextBlock Margin="5,0,0,0"
                                       Text="%"
                                       Foreground="White"
                                       Opacity="0.5"
                                       FontSize="18"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

        </StackPanel>
        <Border Grid.Row="2"
                Background="#8C101828"
                BorderBrush="#1E2939"
                BorderThickness="1"
                CornerRadius="15"
                Padding="10"
                VerticalAlignment="Stretch">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Динамика автоматического разрешения заявок за сутки"
                           Foreground="White"
                           FontSize="20"
                           Opacity="0.75"
                           HorizontalAlignment="Center"/>
                <lvc:CartesianChart Grid.Row="1"
                                    Series="{Binding Series}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    Background="Transparent"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
