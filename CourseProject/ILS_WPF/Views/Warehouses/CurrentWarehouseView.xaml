<UserControl x:Class="ILS_WPF.Views.Warehouses.CurrentWarehouseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ILS_WPF.Views.Warehouses"
             xmlns:clib="clr-namespace:ControlsLib.Controls;assembly=ControlsLib"
             xmlns:prop="clr-namespace:ControlsLib.AttachedProperties;assembly=ControlsLib"
             mc:Ignorable="d" 
             d:DesignHeight="631" d:DesignWidth="1110">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Name}"
                       TextTrimming="CharacterEllipsis"
                       FontSize="30"
                       FontWeight="SemiBold"
                       Foreground="#00D492"/>
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <clib:Button Style="{StaticResource DarkGreenButtonStyle}"
                             Content="Назад"
                             Grid.Column="1"
                             HorizontalAlignment="Right"
                             Padding="10"
                             FontSize="14"
                             CornerRadius="15"
                             Command="{Binding NavigateBackCommand}"
                             Margin="0,0,15,0"/>
                <clib:Button Style="{StaticResource DarkGreenButtonStyle}"
                             Content="Обновить"
                             Grid.Column="1"
                             Padding="10"
                             FontSize="14"
                             CornerRadius="15"
                             Command="{Binding RefreshCommand}"
                             Margin="0,0,15,0"/>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <clib:TextBox Style="{StaticResource TextBoxStyle}"
                          Margin="0,20,0,0"
                          Width="510"
                          Placeholder="Поиск по любому полю"
                          Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}"/>
            <clib:ComboBox Style="{StaticResource ComboBoxStyle}"
                           SelectedValue="{Binding SelectedMaterialType}"
                           Margin="10,0,0,0"
                           Width="175"
                           ItemsSource="{Binding MaterialTypes}">
                <clib:ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource enumConverter}}"
                                   Margin="5"
                                   Foreground="White"/>
                    </DataTemplate>
                </clib:ComboBox.ItemTemplate>
            </clib:ComboBox>
            <clib:Button Style="{StaticResource DarkGreenButtonStyle}"
                         Content="Редактировать"
                         Grid.Column="1"
                         Margin="15,0,0,0"
                         CornerRadius="20"
                         Padding="15"   
                         VerticalAlignment="Bottom"
                         FontSize="14"
                         Command="{Binding OpenEditWindowCommand}"/>
            <clib:Button Style="{StaticResource DarkGreenButtonStyle}"
                         Content="Зарегистрировать МТО"
                         Grid.Column="1"
                         Margin="15,0,0,0"
                         CornerRadius="20"
                         Padding="15"   
                         VerticalAlignment="Bottom"
                         FontSize="14"
                         Command="{Binding OpenRegisterWindowCommand}"/>
        </StackPanel>
        <clib:ListView Style="{StaticResource ListViewStyle}"
                       Grid.Row="2"
                       Margin="100,10,10,10"
                       ItemsSource="{Binding Items}"
                       ItemTemplateSelector="{StaticResource warehouseEntryTemplateSelector}">
            <clib:ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"
                               IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </clib:ListView.ItemsPanel>
        </clib:ListView>
        <TextBlock Grid.Row="2"
                   Text="Данных нет"
                   Foreground="#66FFFFFF"
                   FontSize="40"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasItems}" Value="True">
                            <DataTrigger.Setters>
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger.Setters>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</UserControl>
